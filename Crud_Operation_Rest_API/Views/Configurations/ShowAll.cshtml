
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-3.7.1.min.js"></script>
    <title>Index</title>
    <script>
        $(document).ready(function () {
            $.ajax({
                type: 'GET',
                url: 'https://localhost:44320/api/Values',
                contentType: 'application/json;charset=utf-8;',
                success: function (res) {
                    /*alert(res.length);*/
                    var content = "<tr style='background-color:blue;color:white;'><th>Id</th><th>Name</th></tr>";
                    for (x = 0; x < res.length; x++) {
                        content = content + "<tr><td>" + res[x].configid + "</td><td>" + res[x].configname + "</td></tr>";
                    }
                    $("#tbl").html(content);
                },
                error: function (er) {
                    alert(er.responseText);
                }
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <hr />
                <a href="Index" class="btn btn-primary">Add Record</a>&nbsp;
                <a href="ShowSpecificRecord" class="btn btn-secondary">Show Single record</a>
                <a href="DeleteSpecificRecord" class="btn btn-danger">Delete Single record</a>
                <a href="EditSpecificRecord" class="btn btn-warning">Update Specific record</a>
                <hr />
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <h2 style="text-align:center;">List of All Products</h2>
                <table id="tbl" class="table table-bordered table-striped">
                </table>
            </div>
            <div class="col-sm-2"></div>
        </div>


    </div>
</body>
</html>
